@model School_Management_System.Models.Users
@{
}

<div>
    <div class="login">
        <h3 class="text-center" style="color: darkslateblue; margin-bottom:30px">Login First</h3>

        <form asp-action="Index" method="post">

            <div class="form-group">
                <label class="col-form-label">Email</label>
                <input type="text" class="form-control" asp-for="Email" />
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="col-form-label">Password</label>
                <input type="password" class="form-control" asp-for="Password" />
                @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
            </div>

            <input type="submit" value="Login" class="btn mybtn" /><br />


        </form>
        <div class="text-center">
            <a class="btn-light mt-1" asp-action="Index" asp-controller="Users" >Create an account</a>
        </div>
    </div>
</div>

